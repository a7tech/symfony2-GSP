{% extends 'AppPlaceBundle:Place:layout.html.twig' %}

{% block actions_main %}
<div class="action-view">
    <div class="row">
    <table id="datatable" class="table table-bordered table-striped"
        data-entity-list-route="{{ path('backend_place_datatables') }}"
       >
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'name'|trans({}, 'Common') }}</th>
                <th>{{ 'importance'|trans({}, 'Place') }}</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
            
                {% set link = path('backend_place_show', {id: entity.id}) %}
                <tr data-id="{{ entity.id }}" id="{{ entity.id }}">
                    <td><a href="{{ path('backend_place_show', {'id': entity.id}) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.importance }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}

{% block user_js %}
    <script type="text/javascript" src="{{ asset('tabletools/js/ZeroClipboard.js') }}"></script>
    <script type="text/javascript" src="{{ asset('tabletools/js/TableTools.js') }}"></script>
    <script type="text/javascript" src="{{ asset('tabletools/js/paging.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/appbackend/js/table.js') }}"></script>
{% endblock %}

