{% extends 'AppPlaceBundle:Place:layout.html.twig' %}

{% block actions_main %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{ 'name'|trans({}, "Common")}}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{ 'description'|trans({}, "Common")}}</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>{{ 'importance'|trans({}, "Place") }}</th>
                <td>{{ entity.importance }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}