{% extends 'AppBackendBundle:Dashboard:settings.html.twig' %}

{% block actions%}
    <div class="title-header">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-3 h3">
                    <h3>License type list</h3>
                </div>
                <div class="col-md-5">
                    <div class="crud-actions">
                        <ul class="nav-crud">
                            <li class="active">
                                <a title="List">
                                    <i class="icon-crud-list"></i>
                                    <div>
                                        <label>List</label>
                                    </div>
                                </a>
                            </li>
                            <li class="" id="new">
                                <a href="{{ path('backend_settings_custom_license_type_new') }}" title="New">
                                    <i class="icon-crud-new"></i>
                                    <div>
                                        <label>New</label>
                                    </div>
                                </a>
                            </li>
                            <li class="crud disabled" id="show">
                                <a   title="Show">
                                    <i class="icon-crud-show"></i>
                                    <div>
                                        <label>Show</label>
                                    </div>
                                </a>
                            </li>
                            <li class="crud disabled" id="edit">
                                <a title="Edit">
                                    <i class="icon-crud-edit"></i>
                                    <div>
                                        <label>Edit</label>
                                    </div>
                                </a>
                            </li>
                            <li class="crud disabled" id="delete">
                                <a title="Delete">
                                    <i class="icon-crud-delete"></i>
                                    <div>
                                        <label>Delete</label>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-search">
                        <div class="col-xs-10 col-sm-5 col-md-7">
                            <input type="text" class="form-control">
                        </div>
                        <div class="col-xs-6 col-md-4">
                            <button type="submit" class="btn btn-default">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>



    <div class="action-view">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-3">
                        <div class="left-menu">
                            {% block left_menu %}
                                {{ include(
                                'AppBackendBundle::custom_left_menu.html.twig'
                                ) }}
                            {% endblock %}

                        </div>

                    </div>
                    <div class="col-md-9">
                        <table id="datatable" class="table table-bordered table-striped"
                            data-entity-list-route="{{ path('backend_license_type_datatables') }}"
                           >
                            <thead>
                            <tr>
                                <th></th>
                                <th>Id</th>
                                <th>{{ 'name'|trans({}, 'Common') }}</th>
                                <th>Description</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td><input type="checkbox" id="license_{{ entity.id }}"></td>
                                    <td><a href="{{ path('backend_settings_custom_license_type_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                    <td>{{ entity.name }}</td>
                                    <td>{{ entity.description }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        {% if entities %}
                        <div class="pagination">
                            {{  knp_pagination_render(entities)|raw }}
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block user_js %}
    <script type="text/javascript" src="{{ asset('tabletools/js/ZeroClipboard.js') }}"></script>
    <script type="text/javascript" src="{{ asset('tabletools/js/TableTools.js') }}"></script>
    <script type="text/javascript" src="{{ asset('tabletools/js/paging.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/appbackend/js/table.js') }}"></script>

    <script type="text/javascript">
        var $checkboxes = $('input[id^="license_"]');

        jQuery(document).ready(function() {
            jQuery('input[id^="license_"]').change(function() {
                if($(this).is(':checked')) {
                    var checkboxId = $(this).attr('id');
                    var rowId = checkboxId.substr(8);

                    jQuery('input[id!="'+checkboxId+'"][id^="license_"]').each(function() {
                        $(this).attr('disabled', true);
                    });

                    jQuery('li[class*="crud"]').each(function(){
                        var href = $(this).attr('id')+'/';
                        $(this).removeClass('disabled');
                        $(this).children('a').attr('href',  href+rowId);
                    })
                }
                else {
                    jQuery('input[id!="'+checkboxId+'"][id^="license_"]').each(function() {
                        $(this).removeAttr('disabled');
                    });

                    jQuery('li[class*="crud"]').each(function(){
                        var href = $(this).attr('id')+'/';
                        $(this).addClass('disabled');
                        $(this).children('a').removeAttr('href');
                    })
                }

            });
        });
    </script>
{% endblock %}