{% extends 'AppBackendBundle::base.html.twig' %}

{% block body -%}
    <h1>Address list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>City</th>
                <th>Postcode</th>
                <th>Street</th>
                <th>Building</th>
                <th>Suite</th>
                <th>Updatedat</th>
                <th>Createdat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('backend_settings_address_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.postcode }}</td>
                <td>{{ entity.street }}</td>
                <td>{{ entity.building }}</td>
                <td>{{ entity.suite }}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('backend_settings_address_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('backend_settings_address_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('backend_settings_address_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
