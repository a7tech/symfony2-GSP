{% extends 'AppInvoiceBundle:Returns:layout.html.twig' %}

{% set nav_title =  'product_return_reason.title.edit'|trans({}, 'Invoice') %}

{% block actions_main %}
    <div class="col-md-12 invoice">
        {% include 'AppInvoiceBundle:Returns:InvoiceReturnBody.html.twig' with {entity: entity} %}
        <form class="form-horizontal" id="product-form" action="" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}

            <div class="form-actions well">
                <input class="btn btn-primary" name="save" type="submit" value="Save as Draft">
                <input class="btn btn-primary" name="proceed" type="submit" value="Proceed Invoice">
            </div>
        </form>
    </div>
{% endblock %}

{% block user_js %}
    <script src="{{ asset('bundles/appform/form_admin.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/jquery/plugins/jquery.dotimeout.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/appinvoice/js/invoice-return.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/appinvoice/js/deposit-invoice.js') }}" type="text/javascript"></script>
{% endblock %}