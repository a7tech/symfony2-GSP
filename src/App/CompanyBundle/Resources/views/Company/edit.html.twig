{% extends 'AppBackendBundle:Dashboard:settings.html.twig' %}

{% block bottom %}

    <div class="tab-content">
        <div class="tab-pane active">
            <ul class="nav nav-pills">

                <li class="
                                {% if app.request.attributes.get('_route')|slice(0,15)=='backend_company'%}
                                    active
                                {%endif%}"><a href="{{ path('backend_company') }}">Companies</a></li>


            </ul>
        </div>
    </div>
{% endblock %}

{% block actions%}
    <div class="title-header">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-3 h3">
                    <h3>Company edit</h3>
                </div>
                <div class="col-md-5">
                    <div class="crud-actions">
                        <ul class="nav-crud">
                            <li >
                                <a href="{{ path('backend_company') }}" title="List">
                                    <i class="icon-crud-list"></i>
                                    <div>
                                        <label>List</label>
                                    </div>
                                </a>
                            </li>
                            <li class="" id="new">
                                <a href="{{ path('backend_company_new') }}" title="New">
                                    <i class="icon-crud-new"></i>
                                    <div>
                                        <label>New</label>
                                    </div>
                                </a>
                            </li>
                            <li class="crud " id="show">
                                <a {% if entity.id is not null %}href="{{ path('backend_company_show', {'id': entity.id}) }}"{% endif %}  title="Show">
                                    <i class="icon-crud-show"></i>
                                    <div>
                                        <label>Show</label>
                                    </div>
                                </a>
                            </li>
                            <li class="crud active" id="edit">
                                <a title="Edit">
                                    <i class="icon-crud-edit"></i>
                                    <div>
                                        <label>Edit</label>
                                    </div>
                                </a>
                            </li>
                            <li class="crud " id="delete">
                                <a {% if entity.id is not null %}href="{{ path('backend_company_delete', {'id':entity.id}) }}"{% endif %} title="Delete">
                                    <i class="icon-crud-delete"></i>
                                    <div>
                                        <label>Delete</label>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">

                </div>
            </div>
        </div>

    </div>



    <div class="action-view">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <form action="{% if entity.id is not null %}{{ path('backend_company_edit', { 'id': entity.id }) }}{% else %}{{ path('backend_company_create') }}{% endif %}" class="form-horizontal" method="post" {{ form_enctype(form) }}>

                        {{ form_widget(form) }}
                    
                        <div class="row form-group">
                            <div class="col-md-3"></div>
                            <div class="col-md-9">
                                <div class="form-actions well">
                                    <input class="btn btn-primary" type="submit" value="Save">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block user_js %}
    <script src="{{ asset('bundles/appform/form_admin.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/appaddress/address_form.js') }}" type="text/javascript"></script>
    <script>
        function initAddressWidgets() {
            initAddressForm(
                    '{{ url('ajax_province', {'countryId': '__countryId__'}) }}',
                    '{{ url('ajax_region', {'provinceId': '__provinceId__'}) }}'
            );
        }

        Admin.bindAdditionalWidgets = function() {
            initAddressWidgets();
        };

        jQuery(document).ready(function() {
            Admin.setup_collections(document);
            Admin.bind_widgets();

            if (jQuery('select[id$="_sector"]').find('option[selected="selected"]').length==0) {
                var $speciality = jQuery('input[id*="_specialities"]');

                /**
                 * Disable all needed selects
                 **/

                $speciality.each(function() {
                    $(this).attr('disabled', true);
                })
            }




            var $speciality = jQuery('input[id*="_specialities"]');
            var $sector = jQuery('select[id$="_sector"]');

            /**
             * Disable all needed selects
             **/




            /**
             * Onchange event
             */

            $sector.change(function() {

                var $sectorId = $(this).find(":selected").attr('value');
                var locale = '{{ app.request.attributes.all["_locale"] }}';
                var baseUri = '{{ app.request.baseUrl }}';
                var host = '{{ app.request.host }}'
                var $url = 'http://'+host+baseUri+'/'+locale+'/backend/settings/industry_speciality/ajax_speciality/sectorId='+$sectorId
                $.ajax({
                    url:$url
                }).done(function(data) {
                            var options = '';
                            var dataO= data['res'];

                            for (var i = 0; i < dataO.length; i++) {
                                options += '<li><label><input id="app_companybundle_companytype_specialities' + dataO[i]['id'] +
                                        '" value="'+dataO[i]['id']+'" type="checkbox" name="app_companybundle_companytype[specialities][]"><span>' +
                                        dataO[i]['name'] + '</span></label></li>';
                            }
                            jQuery('ul[id*="_specialities"]').html('');
                            jQuery('ul[id*="_specialities"]').html(options);
                            $speciality.removeAttr('disabled');
                        });
            });
        });
    </script>
{% endblock %}
