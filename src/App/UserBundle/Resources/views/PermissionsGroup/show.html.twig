{% extends 'AppUserBundle:PermissionsGroup:layout.html.twig' %}
{% set nav_title = 'Groups overview' %}
{% block actions_main %}
<div class="action-view">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-9">
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                {% for role in entity.roles %}
                {{role.description}} ({{ role }})
                {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>        
{% endblock %}
