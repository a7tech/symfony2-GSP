{% extends 'AppProjectBundle:ProjectMilestone:layout.html.twig' %}

{% block actions_main %}
<div class="action-view">
    <div class="row">
        <div class="row-align">
                <table id="datatable" class="table table-bordered table-striped"
                    data-entity-list-route="{{ path('backend_project_milestone_datatables') }}"
                   >
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>{{ 'name'|trans({}, 'Common') }}</th>
                        <th>{{ 'description'|trans({}, 'Common') }}</th>
                        <th>{{ 'status'|trans({}, 'Project') }}</th>
                        <th>{{ 'milestone.importance'|trans({}, 'Project') }}</th>
                    </tr>
                    </thead>
                    {% if entities %}
                    <tbody>
                    {% for entity in entities %}
                        <tr id="{{ entity.id }}">
                            <td><a href="{{ path('backend_settings_custom_project_milestone_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td><a href="{{ path('backend_settings_custom_project_milestone_edit', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                            <td>{{ entity.description|raw }}</td>
                            <td>
                                {% set status_info = statusInfo(constant('STATUS_GROUP_NAME', entity), entity.status) %}
                                <span {% if status_info.color is not empty %}style="color: {{ status_info.color }}"{% endif %}>{{ entity.status is not empty ? status_info.name : '' }}</span>
                            </td>
                            <td>{{ entity.value }}%</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    {% endif %}
                </table>
        <div>
    </div>
</div>
{% endblock %}

{% block user_js %}
    <script type="text/javascript" src="{{ asset('tabletools/js/ZeroClipboard.js') }}"></script>
    <script type="text/javascript" src="{{ asset('tabletools/js/TableTools.js') }}"></script>
    <script type="text/javascript" src="{{ asset('tabletools/js/paging.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/appbackend/js/table.js') }}"></script>
{% endblock %}
