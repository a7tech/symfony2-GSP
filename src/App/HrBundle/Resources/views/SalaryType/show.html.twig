{% extends 'AppHrBundle:SalaryType:layout.html.twig' %}

{% set nav_title = 'Salary type overview' %}

{% block actions_main %}

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description|raw }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}