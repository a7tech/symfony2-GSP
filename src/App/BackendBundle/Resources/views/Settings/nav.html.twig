    {% if create is not defined %}
        {% set create = true %}
    {% endif %}
    {% if delete is not defined %}
        {% set delete = true %}
    {% endif %}
    {% if print is not defined %}
        {% set print = false %}
    {% endif %}
    {% if route_params is not defined %}
        {% set route_params = {} %}
    {% endif %}
    {% if list_route is not defined %}
        {% set list_route = route_prefix %}
    {% endif %}
    {% set show_route = route_prefix ~ '_show' %}
    {% set edit_route = route_prefix ~ '_edit' %}
    {% set print_route = route_prefix ~ '_print' %}
    {% set current_route = app.request.attributes.get('_route') %}
    {% set entity_exists = entity is defined and entity.id %}
    <div class="title-header">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-3 h3">
                    <h3>{{ nav_title|default('Title') }}</h3>
                </div>
                <div class="col-md-4">
                    <div class="crud-actions">
                        <ul class="nav-crud">
                            {% set list_active = current_route == list_route %}
                            <li class="{% if list_active %}active{% endif %}">
                                <a {% if not list_active %} href="{{ path(list_route, route_params)}}" {% endif %} title="List">
                                    <i class="icon-crud-list"></i>
                                    <div>
                                        <label>List</label>
                                    </div>
                                </a>
                            </li>
                            {% if create %}
                                {% set create_route = route_prefix ~ '_create' %}
                                {% set create_active = current_route == create_route %}
                                <li class="{% if create_active %}active{% endif %}" id="new">
                                    <a {% if not create_active %} href="{{ path(create_route, route_params) }}" {% endif %} title="New">
                                        <i class="icon-crud-new"></i>
                                        <div>
                                            <label>New</label>
                                        </div>
                                    </a>
                                </li>
                            {% endif %}
                            {% set show_active = current_route == show_route %}
                            <li class="crud {% if show_active %}active{% endif %}{% if not entity_exists %}disabled{% endif %}" id="show">
                                <a {% if not show_active and entity_exists %} href="{{ path(show_route, {id: entity.id}|merge(route_params)) }}" {% endif %} title="Show">
                                    <i class="icon-crud-show"></i>
                                    <div>
                                        <label>Show</label>
                                    </div>
                                </a>
                            </li>
                            {% set edit_active = current_route == edit_route %}
                            <li class="crud {% if edit_active %}active{% endif %}{% if not entity_exists %}disabled{% endif %}" id="edit">
                                <a {% if not edit_active and entity_exists %} href="{{ path(edit_route, {id: entity.id}|merge(route_params)) }}" {% endif %} title="Edit">
                                    <i class="icon-crud-edit"></i>
                                    <div>
                                        <label>Edit</label>
                                    </div>
                                </a>
                            </li>
                            {% if delete %}
                                {% set delete_route = route_prefix ~ '_delete' %}
                                <li class="crud {% if not entity_exists %}disabled{% endif %}" id="delete">
                                    <a {% if entity_exists %} href="{{ path(delete_route, {id: entity.id}|merge(route_params)) }}" {% endif %} title="Delete">
                                        <i class="icon-crud-delete"></i>
                                        <div>
                                            <label>Delete</label>
                                        </div>
                                    </a>
                                </li>
                            {% endif %}
                            {% if print and entity_exists %}
                                <li class="crud {% if show_active %}active{% endif %}{% if not entity_exists %}disabled{% endif %}" id="printer">
                                    <a href="{{ path(print_route, {id: entity.id}|merge(route_params)) }}" title="print">
                                        <i class="icon-crud-printer"></i>
                                        <div>
                                            <label>Print</label>
                                        </div>
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>

                {% if entity is not defined %}
                    <div class="col-md-3" id="copy_buttons">

                    </div>
                    <div class="col-md-2">
                        <div class="form-search">
                            <input type="text" class="form-control" id="search_filter" placeholder="Search">
                        </div>

                        {% if list_active == true and (current_route == "backend_products" or current_route == "backend_person" or current_route == "backend_company") %}
                        <div>
                            <a href="#" class="search-filter-but active">More search tools</a>
                        </div>
                        {% endif %}
                        
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
